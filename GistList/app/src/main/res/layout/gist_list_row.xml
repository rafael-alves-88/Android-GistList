<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvGist"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="10dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:id="@+id/llGist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            app:riv_border_width="0dip"
            app:riv_corner_radius="30dp"
            app:riv_mutate_background="true"
            app:riv_oval="true"
            app:riv_tile_mode="clamp"
            tools:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/llGistInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGistUser"
                style="@style/RobotoBold"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:linksClickable="false"
                android:maxLines="2"
                android:singleLine="false"
                android:textSize="14sp"
                tools:text="Rafael Alves" />

            <RelativeLayout
                android:id="@+id/llGistFileInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#33020202"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tvGistType"
                    style="@style/Roboto"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:maxLines="1"
                    android:textSize="13sp"
                    tools:text="application/xml" />

                <TextView
                    android:id="@+id/tvGistLanguage"
                    style="@style/Roboto"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:textSize="13sp"
                    tools:text="Java" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>